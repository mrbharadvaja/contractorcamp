    // --- LOGIC ---
    let currentLang = 'en';

    function setLanguage(lang) {
        currentLang = lang;
        
        // Update Buttons UI
        document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');

        // Handle RTL for Arabic
        const pages = document.querySelectorAll('.page-face');
        if(lang === 'ar') {
            pages.forEach(p => p.classList.add('rtl-layout'));
        } else {
            pages.forEach(p => p.classList.remove('rtl-layout'));
        }

        // Update Text
        document.getElementById('cover-title').innerHTML = content[lang].title;
        document.getElementById('cover-subtitle').innerText = content[lang].subtitle;
        document.getElementById('cover-desc').innerText = content[lang].desc;
        document.getElementById('btn-start').innerText = content[lang].btnStart;
        
        // Update Content Areas
        document.getElementById('page1-content').innerHTML = content[lang].p1;
        document.getElementById('page2-content').innerHTML = content[lang].p2;
        document.getElementById('page3-content').innerHTML = content[lang].p3;
        document.getElementById('page4-content').innerHTML = content[lang].p4;
        document.getElementById('page5-content').innerHTML = content[lang].p5;

        // Update Nav Buttons
        document.getElementById('btn-back1').innerText = content[lang].btnBack;
        document.getElementById('btn-next2').innerText = content[lang].btnNext;
        document.getElementById('btn-back2').innerText = content[lang].btnBack;
        document.getElementById('btn-next3').innerText = content[lang].title.includes("Contact") ? "CONTACTS" : "CONTACTS"; 
        document.getElementById('btn-back3').innerText = content[lang].btnBack;
    }

    // Initialize with English
    setLanguage('en');

    // Page Flip Logic
    function flipNext(pageNum) {
        const page = document.getElementById('p' + pageNum);
        page.classList.add('flipped');
        setTimeout(() => { page.style.zIndex = pageNum; }, 200);
    }

    function flipPrev(pageNum) {
        const page = document.getElementById('p' + pageNum);
        page.classList.remove('flipped');
        setTimeout(() => { page.style.zIndex = 5 - pageNum; }, 200);
    }
</script>

</body>
</html>
